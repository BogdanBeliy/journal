version: '3.3'


services:
  web:
    build: .
    container_name: journal
    restart: on-failure
    ports:
      - "8000:8000"
    volumes:
      67.205.155.17
    env_file:
      - ./dev.env
    command: bash -c "python manage.py migrate --noinput && gunicorn journal.wsgi:application --bind 0.0.0.0:8000 -w 4 --reload"
    networks:
      main_net:
    depends_on:
      - db

  db:
    image: postgres
    container_name: postgres_web
    environment:
      - POSTGRES_HOST_AUTH_METHOD=trust
      - POSTGRES_PASSWORD=admin
      - POSTGRES_USER=bogdan
      - POSTGRES_DB=students
    volumes:
      - postgres_data:/var/lib/postgres/data
    networks:
      main_net:


  nginx:
    restart: always
    image: nginx:latest
    container_name: proxy_nginx
    ports:
      - "80:80"
    volumes:
      - ./static/:/journal/static
      - ./media/:/journal/media
      - ./nginx/:/etc/nginx/conf.d
    depends_on:
      - web
    networks:
      main_net:


volumes:
  postgres_data:

networks:
  main_net:


